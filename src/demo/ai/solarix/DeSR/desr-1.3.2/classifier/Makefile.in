######################################################################
# Directories
######################################################################

subdir=       classifier
srcdir=       @srcdir@
top_builddir= @top_builddir@
top_srcdir=   @top_srcdir@

######################################################################
# Libraries
######################################################################

LIBRARIES= libClassifier.a

######################################################################
# Includes
######################################################################

INCLUDES= -I$(top_srcdir) -I$(top_srcdir)/ixe

######################################################################
# Files
######################################################################

SOURCES= $(wildcard *.cpp)
OBJECTS= $(SOURCES:%.cpp=%.lo)

######################################################################
# C, C++
######################################################################

CPPFLAGS= @CPPFLAGS@
CFLAGS=   @CFLAGS@
CXXFLAGS= @CXXFLAGS@
LDFLAGS=  @LDFLAGS@

######################################################################
# Targets
######################################################################

all: $(LIBRARIES)

libClassifier.a: $(OBJECTS)
	$(AR) $@ $^

######################################################################
# Common rules and targets
######################################################################

-include $(top_builddir)/Makefile.common
