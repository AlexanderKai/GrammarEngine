// В зависимости от заданности имени инфинитива, создается либо простое
// прилагательное, либо причастие.
#define Adj_5022( имя, В_инф=NULL, Aspect=NULL )      \
 #begin

  #if В_инф!=NULL
   #begin
    entry имя : ПРИЛАГАТЕЛЬНОЕ { ПРИЧАСТИЕ СТРАД ВРЕМЯ:ПРОШЕДШЕЕ paradigm Прил_5022 }

    extern entry В_инф:ИНФИНИТИВ

    #if Aspect==NULL
    link ПРИЛАГАТЕЛЬНОЕ:имя {ПРИЧАСТИЕ} <в_инфинитив> ИНФИНИТИВ:В_инф{}
    #else
    link ПРИЛАГАТЕЛЬНОЕ:имя {ПРИЧАСТИЕ} <в_инфинитив> ИНФИНИТИВ:В_инф{ ВИД:Aspect }
    #endif
    
    tag ПРИЛАГАТЕЛЬНОЕ:имя {
                            ПЕРЕХОДНОСТЬ:<в_инфинитив> // переходность и вид копируем из инфинитива
                            ВИД:<в_инфинитив>
                            ПадежВал:<в_инфинитив>:ПАДЕЖ // а падежная валентность конфликтует с обычными падежами для прилагательного, поэтому копируем как состояние новой координаты
                            МОДАЛЬНЫЙ:<в_инфинитив> 
                           }     

   #end
  #else
   #begin
    entry имя : ПРИЛАГАТЕЛЬНОЕ { paradigm Прил_5022 }
   #end
  #endif
 #end

 
