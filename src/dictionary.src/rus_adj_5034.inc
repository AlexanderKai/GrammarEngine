 #define Adj_5034( имя, В_инф=NULL, Aspect=NULL )      \
  #begin
  
   #if Aspect==NULL
    entry имя : ПРИЛАГАТЕЛЬНОЕ { paradigm Прил_5034 }
   #else  
    entry имя : ПРИЛАГАТЕЛЬНОЕ { paradigm Прил_5034 ВИД:Aspect }
   #endif  
  
   #if В_инф!=NULL
    #begin
     extern entry В_инф:ИНФИНИТИВ
     #if Aspect==NULL
     link ПРИЛАГАТЕЛЬНОЕ:имя {}   <в_инфинитив> ИНФИНИТИВ:В_инф{}
     #else
     link ПРИЛАГАТЕЛЬНОЕ:имя { ВИД:Aspect }   <в_инфинитив> ИНФИНИТИВ:В_инф{ ВИД:Aspect }
     #endif
    #end
   #endif
  #end

  
 // ************************************* 
 // Причастие настоящего времени
 // ************************************* 
 #define наст( Статья, В_инф, Aspect=NULL )  \
  #begin
   #if Aspect==NULL
    #begin
     entry Статья : ПРИЛАГАТЕЛЬНОЕ { paradigm Прил_5034 ВИД:НЕСОВЕРШ }
     link ПРИЛАГАТЕЛЬНОЕ:Статья {} <в_инфинитив> ИНФИНИТИВ: В_инф { ВИД:НЕСОВЕРШ }

     tag ПРИЛАГАТЕЛЬНОЕ:Статья {
                                ПРИЧАСТИЕ
                                ВРЕМЯ:НАСТОЯЩЕЕ
                                ПЕРЕХОДНОСТЬ:<в_инфинитив> // переходность и вид копируем просто
                                ВИД:НЕСОВЕРШ
                                ПадежВал:<в_инфинитив>:ПАДЕЖ // а падежная валентность конфликтует с обычными падежами для прилагательного, поэтому копируем как состояние новой координаты
                                МОДАЛЬНЫЙ:<в_инфинитив> 
                               }

    #end
   #else  
    #begin 
     entry Статья : ПРИЛАГАТЕЛЬНОЕ { paradigm Прил_5034 ВИД:Aspect }
     link ПРИЛАГАТЕЛЬНОЕ:Статья { ВИД:Aspect } <в_инфинитив> ИНФИНИТИВ: В_инф { ВИД:Aspect }
     
     tag ПРИЛАГАТЕЛЬНОЕ:Статья {
                                ПРИЧАСТИЕ
                                ВРЕМЯ:НАСТОЯЩЕЕ
                                ПЕРЕХОДНОСТЬ:<в_инфинитив> // переходность и вид копируем просто
                                ВИД:Aspect
                                ПадежВал:<в_инфинитив>:ПАДЕЖ // а падежная валентность конфликтует с обычными падежами для прилагательного, поэтому копируем как состояние новой координаты
                                МОДАЛЬНЫЙ:<в_инфинитив> 
                               }
     
    #end 
   #endif
  #end

