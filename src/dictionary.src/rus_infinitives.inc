   entry имя : ИНФИНИТИВ { ВИД:НЕСОВЕРШ ПЕРЕХОДНОСТЬ:НЕПЕРЕХОДНЫЙ }
   #endif


   #if В_Сов!=NULL
    #begin

     #if В_Сов==Вин
      #error Ошибка в определении инфинитива: имя
     #endif

     extern entry В_Сов : ИНФИНИТИВ
     link ИНФИНИТИВ:имя { ВИД:НЕСОВЕРШ }   <в_сов>   ИНФИНИТИВ:В_Сов{ ВИД:СОВЕРШ }
