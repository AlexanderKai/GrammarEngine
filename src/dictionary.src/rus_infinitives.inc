 // ***********************************************************************
 // Макрос для облегчения набора статей для глаголов, не имеющих подходящей
 // таблицы словообразования
 // ***********************************************************************
 #define VEntry(                   \
                Name, Aspect,      \
                F1, F2,            \
                F3, F4,            \
                F5, F6,            \
                F7, F8, F9, F10,   \
                F11,               \
                F12, F13           \
              )                    \
 #begin
 entry Name : ГЛАГОЛ
 {
  ВИД : Aspect
  НАКЛОНЕНИЕ:ИЗЪЯВ |{

  #if Aspect==НЕСОВЕРШ
                     ВРЕМЯ:НАСТОЯЩЕЕ |{
  #else
                     ВРЕМЯ:БУДУЩЕЕ   |{
  #endif
                                       ЛИЦО:1 ЧИСЛО { F1 F2 }
                                       ЛИЦО:2 ЧИСЛО { F3 F4 }
                                       ЛИЦО:3 ЧИСЛО { F5 F6 }
                                      }

                     ВРЕМЯ:ПРОШЕДШЕЕ |{
                                       ЧИСЛО:ЕД РОД { F7 F8 F9 }
                                       ЧИСЛО:МН     { F10 }
                                      }
                    }

  НАКЛОНЕНИЕ:ПОБУД ЛИЦО:2 ЧИСЛО:ЕД { F11 }
  НАКЛОНЕНИЕ:ПОБУД ЛИЦО:2 ЧИСЛО:МН { F12 }
  НАКЛОНЕНИЕ:ПОБУД ЛИЦО:1 ЧИСЛО:МН { F13 }


  <в_инфинитив> ИНФИНИТИВ:Name{ ВИД : Aspect }
 }
 #end
  

