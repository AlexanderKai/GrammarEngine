 // ****************************************************************************
 // Макрос добавляет признак 'управляет инфинитивом'
 // Например - инфинитив РАЗРЕШИТЬ допускает конструкции типа 'РАЗРЕШИТЬ СПАТЬ'
 // ****************************************************************************
 #define модальный(Инф) tag ИНФИНИТИВ:Инф { МОДАЛЬНЫЙ }


 // *************************************************************
 // Для переходных глаголов - с указанием падежной валентности
 // *************************************************************
 #define сов_инф( имя, В_Несов=NULL, Падежи=NULL )      \
  #begin

  #if Падежи!=NULL && Падежи!=INTR
  entry имя : ИНФИНИТИВ { ВИД:СОВЕРШ ПЕРЕХОДНОСТЬ:ПЕРЕХОДНЫЙ ПАДЕЖ:Падежи }
  #else
  entry имя : ИНФИНИТИВ { ВИД:СОВЕРШ ПЕРЕХОДНОСТЬ:НЕПЕРЕХОДНЫЙ }
  #endif

  #if В_Несов!=NULL
   #begin

    #if В_Несов==Вин || В_Несов==Твор || В_Несов==Дат
     #error Ошибка в определеннии инфинитива: имя
    #endif

    extern entry В_Несов : ИНФИНИТИВ
    link ИНФИНИТИВ:имя {ВИД:СОВЕРШ}     <в_несов> ИНФИНИТИВ:В_Несов{ВИД:НЕСОВЕРШ}
    link ИНФИНИТИВ:В_Несов {ВИД:НЕСОВЕРШ} <в_сов>   ИНФИНИТИВ:имя{ВИД:СОВЕРШ}

    // Если падежная валентность не определена, то импортируем из инфинитива несовершенного вида 
    #if Падежи==NULL
     tag ИНФИНИТИВ:имя { replace:ПЕРЕХОДНОСТЬ:<в_несов> replace:ПАДЕЖ:<в_несов> }
    #endif

   #end
  #endif

  #end



 #define сов_инф_удар( имя, ударение, В_Несов=NULL, Падежи=NULL )      \
  #begin

  #if Падежи!=NULL && Падежи!=INTR
  entry имя : ИНФИНИТИВ { ВИД:СОВЕРШ ПЕРЕХОДНОСТЬ:ПЕРЕХОДНЫЙ ПАДЕЖ:Падежи aux stress=ударение }
  #else
  entry имя : ИНФИНИТИВ { ВИД:СОВЕРШ ПЕРЕХОДНОСТЬ:НЕПЕРЕХОДНЫЙ aux stress=ударение }
  #endif

  #if В_Несов!=NULL
   #begin

    #if В_Несов==Вин || В_Несов==Твор || В_Несов==Дат
     #error Ошибка в определеннии инфинитива: имя
    #endif

    extern entry В_Несов : ИНФИНИТИВ
    link ИНФИНИТИВ:имя {ВИД:СОВЕРШ}     <в_несов> ИНФИНИТИВ:В_Несов{ВИД:НЕСОВЕРШ}
    link ИНФИНИТИВ:В_Несов {ВИД:НЕСОВЕРШ} <в_сов>   ИНФИНИТИВ:имя{ВИД:СОВЕРШ}

    // Если падежная валентность не определена, то импортируем из инфинитива несовершенного вида 
    #if Падежи==NULL
     tag ИНФИНИТИВ:имя { replace:ПЕРЕХОДНОСТЬ:<в_несов> replace:ПАДЕЖ:<в_несов> }
    #endif

   #end
  #endif

  #end


 // ************************************************************
 // Для переходных глаголов - с указанием падежной валентности
 // ************************************************************
 #define несов_инф( имя, В_Сов=NULL, Падежи=NULL )      \
  #begin
  
   #if Падежи!=NULL
   entry имя : ИНФИНИТИВ { ВИД:НЕСОВЕРШ ПЕРЕХОДНОСТЬ:ПЕРЕХОДНЫЙ ПАДЕЖ:Падежи }
